<%- include("header", {title: title}); %>


<h1>Our products</h1>

<pre><%#= JSON.stringify(res, null, 4) %></pre>

<table align="center">
    <tr>
        <th>id</th><th>article</th><th>price</th><th>action</th>
    </tr>
<% for (const row of res) { %>
    <tr>
        <td><%= row.id %></td>
        <td class="left"><%= row.description %></td>
        <td><%= row.price %></td>
        <td><img src="<%= row.image %>"></td>


        <td><a href="/eshop/edit/<%= row.id %>">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                <a href="/eshop/delete/<%= row.id %>"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
    </tr>
<% }; %>
</table>

<%- include("footer"); %>
